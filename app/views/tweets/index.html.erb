<p style="color: green"><%= notice %></p>




<h2 class="text-center"> Ultimos Tweets </h2 > <br/>


<form class="d-flex  mb-4" role="search">

<%= form_with url: tweets_path, method: :get do |form|%>
 <%= form.text_field :query_text, placeholder: 'Buscar en tweeter', value: params[:query_text], class:"form-control me-2"%>
 <%= form.submit "Buscar", class:"btn btn-secondary" %>
<%end%> <br/>
                
</form>

<div id="tweets">
  <% if @tweets.length > 0 %>
    <% @tweets.invert.each do |tweet| %>
    <div class="card mb-3 bg-dark text-white">
        <div class="card-body">
              <%= render tweet %>
              <p>
                <%= link_to "ir al tweet", tweet %>
              </p>
            </div>
          </div>
          
        <% end %>
        <%== pagy_bootstrap_nav(@pagy)%>
      <% else %>
      
      <h1> No hay coincidencias</h1>
    <%end%>
    
</div>

      




